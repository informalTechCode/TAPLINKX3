<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="#000000">

    <!-- First row -->
    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <Button
            android:id="@+id/btn_hide"
            style="@style/KeyboardButton"
            android:text="Hide" />
        <Button
            android:id="@+id/button_q"
            style="@style/KeyboardButton"
            android:text="Q"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_w"
            style="@style/KeyboardButton"
            android:text="W"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_e"
            style="@style/KeyboardButton"
            android:text="E"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_r"
            style="@style/KeyboardButton"
            android:text="R"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_T"
            style="@style/KeyboardButton"
            android:text="T"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_y"
            style="@style/KeyboardButton"
            android:text="Y"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_u"
            style="@style/KeyboardButton"
            android:text="U"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_i"
            style="@style/KeyboardButton"
            android:text="I"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_o"
            style="@style/KeyboardButton"
            android:text="O"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_p"
            style="@style/KeyboardButton"
            android:text="P"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Second row -->
    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <Button
            android:id="@+id/button_a"
            style="@style/KeyboardButton"
            android:text="A"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_s"
            style="@style/KeyboardButton"
            android:text="S"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_d"
            style="@style/KeyboardButton"
            android:text="D"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_f"
            style="@style/KeyboardButton"
            android:text="F"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_g"
            style="@style/KeyboardButton"
            android:text="G"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_h"
            style="@style/KeyboardButton"
            android:text="H"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_j"
            style="@style/KeyboardButton"
            android:text="J"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_k"
            style="@style/KeyboardButton"
            android:text="K"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_l"
            style="@style/KeyboardButton"
            android:text="L"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Third row -->
    <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <Button
            android:id="@+id/button_z"
            style="@style/KeyboardButton"
            android:text="Z"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_x"
            style="@style/KeyboardButton"
            android:text="X"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_c"
            style="@style/KeyboardButton"
            android:text="C"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_v"
            style="@style/KeyboardButton"
            android:text="V"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_b"
            style="@style/KeyboardButton"
            android:text="B"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_n"
            style="@style/KeyboardButton"
            android:text="N"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/button_m"
            style="@style/KeyboardButton"
            android:text="M"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Fourth row -->
    <LinearLayout
        android:id="@+id/fourth_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Clear key -->
        <Button
            android:id="@+id/btn_clear"
            style="@style/KeyboardButton"
            android:text="Clear"
            android:layout_weight="1"/>

        <!-- Caps key -->
        <Button
            android:id="@+id/btn_caps"
            style="@style/KeyboardButton"
            android:text="ABC"
            android:textAllCaps="false"
            android:layout_weight="1"/>

        <!-- Switch key -->
        <Button
            android:id="@+id/btn_switch"
            style="@style/KeyboardButton"
            android:text="123"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_left_dynamic"
            style="@style/KeyboardButton"
            android:text="\@"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_middle_dynamic"
            style="@style/KeyboardButton"
            android:text="."
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_right_dynamic"
            style="@style/KeyboardButton"
            android:text="/"
            android:layout_weight="1"/>

        <!-- Space key -->
        <Button
            android:id="@+id/btn_space"
            style="@style/KeyboardButton"
            android:text="Space"
            android:layout_weight="2"/>

        <!-- Backspace key -->
        <Button
            android:id="@+id/btn_backspace"
            style="@style/KeyboardButton"
            android:text="âŒ«"
            android:layout_weight="1.5"/>

        <!-- Enter key -->
        <Button
            android:id="@+id/btn_enter"
            style="@style/KeyboardButton"
            android:text="Enter"
            android:layout_weight="1.5"/>
    </LinearLayout>
</LinearLayout>