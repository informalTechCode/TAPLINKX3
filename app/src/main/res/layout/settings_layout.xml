<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/settings_background"
    android:padding="16dp"
    android:elevation="1000dp">

    <!-- Left Column (Standard Settings) -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="12dp">

        <!-- Header with Settings title and Help button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btnHelp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/nav_button_background"
                android:src="@android:drawable/ic_menu_help"
                android:contentDescription="Help"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:tint="#FFFFFF"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anchor Smoothness"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/smoothnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="80"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Size"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/screenSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="100"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>

        <Button
            android:id="@+id/btnResetScreenSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Reset to 100%"
            android:textColor="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/fontSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:max="150"
            android:progress="50"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Color"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnColorWhite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/nav_button_background"
                android:text=""
                android:contentDescription="White text color"/>

            <Button
                android:id="@+id/btnColorGray"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/nav_button_background"
                android:text=""
                android:contentDescription="Gray text color"/>

            <Button
                android:id="@+id/btnColorAccent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/nav_button_background"
                android:text=""
                android:contentDescription="Accent text color"/>

            <Button
                android:id="@+id/btnColorYellow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/nav_button_background"
                android:text=""
                android:contentDescription="Yellow text color"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnCloseSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Close"
            android:textColor="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <!-- Right Column (Position Settings) -->
    <LinearLayout
        android:id="@+id/settingsPositionLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:visibility="gone">

        <!-- Header for Position -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Position"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/lblHorizontalPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal Position"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"/>

        <SeekBar
            android:id="@+id/horizontalPosSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/lblVerticalPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vertical Position"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"/>

        <SeekBar
            android:id="@+id/verticalPosSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnResetPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Reset"
            android:textColor="#FFFFFF"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
