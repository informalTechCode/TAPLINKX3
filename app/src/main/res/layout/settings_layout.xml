<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/settings_background"
    android:padding="12dp"
    android:elevation="1000dp">

    <!-- Column 1: Audio & Display -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="10dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <com.TapLink.app.FontIconView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="@string/fa_gear"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btnHelp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/settings_icon_button_background"
                android:src="@android:drawable/ic_menu_help"
                android:contentDescription="Help"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:tint="#B0FFFFFF"
                android:layout_marginEnd="8dp"/>

            <com.TapLink.app.FontIconView
                android:id="@+id/btnCloseSettings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/settings_icon_button_background"
                android:text="@string/fa_xmark"
                android:textColor="#B0FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:contentDescription="Close"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Volume -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"/>

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:layout_marginBottom="10dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"/>

        <!-- Brightness -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"/>

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:layout_marginBottom="10dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"/>

        <!-- Anchor Smoothness -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anchor Smoothness"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"/>

        <SeekBar
            android:id="@+id/smoothnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:max="100"
            android:progress="80"
            android:layout_marginBottom="10dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"/>

        <!-- Screen Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Size"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"/>

        <SeekBar
            android:id="@+id/screenSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:max="100"
            android:progress="100"
            android:layout_marginBottom="6dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"/>

        <Button
            android:id="@+id/btnResetScreenSize"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Reset 100%"
            android:textColor="#82B1FF"
            android:textSize="10sp"
            android:background="@drawable/settings_outlined_button_background"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Groq API Key Button -->
        <Button
            android:id="@+id/btnGroqApiKey"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Enter Groq API Key"
            android:textColor="#82B1FF"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_outlined_button_background"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#20FFFFFF"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="14dp"/>

    <!-- Column 2: Typography & Colors -->
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="10dp">

        <!-- Font Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"/>

        <SeekBar
            android:id="@+id/fontSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:max="150"
            android:progress="50"
            android:layout_marginBottom="12dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"/>

        <!-- Text Color -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Color"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="6dp"/>

        <com.TapLinkX3.app.ColorWheelView
            android:id="@+id/colorWheelView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btnResetTextColor"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Reset Color"
            android:textColor="#82B1FF"
            android:textSize="10sp"
            android:background="@drawable/settings_outlined_button_background"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"/>



    </LinearLayout>

    <!-- Column 3: Position Settings (conditional visibility) -->
    <LinearLayout
        android:id="@+id/settingsPositionLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:visibility="gone">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20FFFFFF"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POSITION"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <!-- Horizontal Position -->
        <TextView
            android:id="@+id/lblHorizontalPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"/>

        <SeekBar
            android:id="@+id/horizontalPosSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="10dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"
            android:visibility="visible"/>

        <!-- Vertical Position -->
        <TextView
            android:id="@+id/lblVerticalPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vertical"
            android:textColor="#82B1FF"
            android:textSize="11sp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"/>

        <SeekBar
            android:id="@+id/verticalPosSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="28dp"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="10dp"
            android:progressTint="#82B1FF"
            android:thumbTint="#FFFFFF"
            android:progressBackgroundTint="#40FFFFFF"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnResetPosition"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Reset"
            android:textColor="#82B1FF"
            android:textSize="10sp"
            android:background="@drawable/settings_outlined_button_background"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
