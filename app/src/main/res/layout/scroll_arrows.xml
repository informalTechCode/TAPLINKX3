<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202020"
    android:padding="0dp"
    android:weightSum="10">

    <!-- Main feature buttons -->
    <ImageButton
        android:id="@+id/btnScrollToggle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/btnModeToggle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/btnYouTube"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/btnBookmarks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter" />

    <!-- Zoom buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Scroll buttons -->
    <ImageButton
        android:id="@+id/btnScrollUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_up" />

    <!-- Horizontal scroll buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnScrollLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_left" />

        <ImageButton
            android:id="@+id/btnScrollRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nav_button_background"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnScrollDown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_down" />

</LinearLayout>