<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:orientation="horizontal"
    android:background="@drawable/nav_bar_background"
    android:gravity="center_vertical"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <com.TapLink.app.FontIconView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_arrow_left"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Go back"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnForward"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_arrow_right"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Go forward"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnHome"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_house"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Go home"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnLink"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_link"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Enter URL"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnSettings"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_gear"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Settings"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnRefresh"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_rotate_right"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Refresh page"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnHide"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_expand"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Fullscreen mode"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLink.app.FontIconView
        android:id="@+id/btnQuit"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:text="@string/fa_xmark"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Quit app"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>