<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="#000000"
    android:gravity="center_vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_arrow_left"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Go back"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnForward"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_arrow_right"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Go forward"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_home"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Go home"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnLink"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_link"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Enter URL"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_cog"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Settings"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnRefresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_sync"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Refresh page"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnHide"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_eye_slash"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Hide navigation"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnQuit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/fa_times"
        android:background="@drawable/nav_button_background"
        android:contentDescription="Quit app"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"/>
</LinearLayout>