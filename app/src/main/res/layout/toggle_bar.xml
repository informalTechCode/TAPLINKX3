<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202020"
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    android:clipChildren="true"
    android:clipToPadding="true">

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnModeToggle"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnYouTube"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/fa_table_columns"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnBookmarks"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/fa_bookmark"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnZoomOut"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/fa_magnifying_glass_minus"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnZoomIn"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/fa_magnifying_glass_plus"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Scroll Arrows -->
    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnScrollUp"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/fa_arrow_up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnScrollLeft"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/fa_arrow_left"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnScrollRight"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/fa_arrow_right"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnScrollDown"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/fa_arrow_down"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnMask"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/fa_eye"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnAnchor"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/nav_button_background"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/fa_arrows_up_down_left_right"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>