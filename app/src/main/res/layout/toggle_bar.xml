<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="35dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/toggle_bar_background"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:gravity="top">

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnModeToggle"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_mobile_screen"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnYouTube"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_glasses"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnBookmarks"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_bookmark"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnZoomOut"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_magnifying_glass_minus"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnZoomIn"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_magnifying_glass_plus"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnMask"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_eye_slash"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

    <com.TapLinkX3.app.FontIconView
        android:id="@+id/btnAnchor"
        android:layout_width="35dp"
        android:layout_height="55dp"
        android:background="@drawable/nav_button_background"
        android:gravity="center"
        android:text="@string/fa_anchor"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>
