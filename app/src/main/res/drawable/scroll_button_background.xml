<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state - Greenish overlay on dark grey -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#404040"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4069F0AE"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Hovered state - Blueish overlay on dark grey -->
    <item android:state_hovered="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#404040"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#8082B1FF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Activated state - Blueish overlay on dark grey (Fallback for hover) -->
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#404040"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#8082B1FF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state - Dark grey -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#404040"/>
        </shape>
    </item>
</selector>
