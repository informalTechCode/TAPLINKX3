<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4069F0AE"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#69F0AE"/>
        </shape>
    </item>
    
    <!-- Hovered state -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#3082B1FF"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#82B1FF"/>
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#2582B1FF"
                android:endColor="#1582B1FF"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#4082B1FF"/>
        </shape>
    </item>
</selector>
