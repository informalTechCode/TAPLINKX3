<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Pressed state - accent glow effect -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3582B1FF"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1.5dp" android:color="#82B1FF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4069F0AE"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="#69F0AE"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Hovered state -->
    <item android:state_hovered="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2082B1FF"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="#5082B1FF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state - subtle glass effect -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#15FFFFFF"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <!-- Subtle top highlight for depth -->
            <item android:bottom="24dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#10FFFFFF"
                        android:endColor="#00FFFFFF"/>
                    <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"
                        android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
